{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "pre-commit": {
    "enabled": true
  },
  "postUpgradeTasks": {
    "commands": [
      "pip install pre-commit",
      "GO111MODULE=on go install github.com/norwoodj/helm-docs/cmd/helm-docs@latest",
      "pre-commit run -av"
    ]
  }
}
