{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "pre-commit": {
    "enabled": true
  },
  "postUpgradeTasks": {
    "commands": [
      "scripts/update_version.sh {{{commitMessage}}}"
    ],
    "fileFilters": [
      "**/README.md",
      "**/Chart.yaml",
      "CHANGELOG.md"
    ]
  }
}
