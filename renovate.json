{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "pre-commit": {
    "enabled": true
  },
  "postUpgradeTasks": {
    "commands": [
      "GO111MODULE=on go install github.com/norwoodj/helm-docs/cmd/helm-docs@latest",
      "$HOME/go/bin/helm-docs"
    ],
    "fileFilters": [
      "**/README.MD"
    ]
  }
}
